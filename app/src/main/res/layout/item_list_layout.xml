<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp">

    <!-- Painting Image -->
    <ImageView
        android:id="@+id/paintingImage"
        android:layout_width="90dp"
        android:layout_height="95dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Painting Name -->
    <TextView
        android:id="@+id/paintingName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Painting Name"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@id/paintingImage"
        app:layout_constraintTop_toTopOf="@id/paintingImage"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Author Name -->
    <TextView
        android:id="@+id/paintingAuthor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Author Name"
        android:textSize="18sp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toEndOf="@id/paintingImage"
        app:layout_constraintTop_toBottomOf="@id/paintingName"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Button Add to Favorites -->
    <ImageButton
        android:id="@+id/buttonFavorite"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:background="@null"
        android:contentDescription="Favorite button"
        android:src="@drawable/sharp"
    app:layout_constraintTop_toBottomOf="@id/paintingImage"
    app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
